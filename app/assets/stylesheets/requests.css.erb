/*request index */
ul.request_list {display:inline-block;width:100%;margin:0px;padding:0px;list-style:none;}
ul.request_list li {display:inline-block;list-style-type:none;margin:0px;padding:0px;height:40px;width:100%;line-height:40px;font-size:14px;color:#325d64;border-bottom:1px solid #cccccc;opacity:0.8;}
ul.request_list li:hover {opacity:1.0;}
ul.request_list li.header {background:#7895a3;color:#ffffff;}
ul.request_list li span {display:inline-block;height:40px;text-align:center;float:left;}
ul.request_list li span.username {width:29%;}
ul.request_list li span.age {width:11%;}
ul.request_list li span.created {width:32%;}
ul.request_list li span.view_button {width:24%;font-size:18px;}
ul.request_list li span.view_button:hover {font-size:20px;}
ul.request_list li a {text-decoration:none;color:#325d64;}
ul.request_list li a:hover {font-size:15px;}
ul.request_list li span.view_button.icon {text-align:center;display:inline;}

/*purchase button*/
div.purchase_request {display:inline-block;width:100%;float:left;}
div.purchase_request span.purchase_button {display:inline-block;color:#ffffff;border:1px solid #cccccc;background:#7894a3;margin-left:20%;margin-right:20%;width:60%;height:60px;text-align:center;line-height:60px;cursor:pointer;}
div.purchase_request span.purchase_button a {text-decoration:none;color:#ffffff;display:block;height:60px;}
div.purchase_request span.purchase_button:hover {color:#cccccc;background:#325d64;}