<!DOCTYPE html>
<html>
<head>
  	<title><%= title %></title>
  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "application" %>
	<%= render 'layouts/meta' if Rails.env.production? %>
	<link rel="shortcut icon" href="<%= asset_path 'favicon.png' %>">
	<link rel="icon" href="<%= asset_path 'favicon.png' %>">	
  	<%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
	<%= render 'layouts/header' %>
		
	<section class="page-body-content">
		<div class="container_12">
		<div class="grid_12 body_content">
			<% if is_clinic_index? %>
				<div class="middle_content">
				<%= yield %>			
				</div>
			<% elsif is_clinic_explorer? || is_clinic_comparator? || (is_controller?('statistics')) %>
				<div class="explorer_content">
						<% flash.each do |key, value| %>
							<div class="grid_9 alpha"><div class="flash <%= key %>"><%= value %></div></div>
						<% end %>
		
						<%= yield %>
				</div>
			<% else %>
				<% if is_controller?("pages") && is_action?('ranking') %>
					<%= render 'layouts/region_map' %>
					<div id="ranking_content" class="hidden">
				<% end %>
				<div class="grid_3 alpha">
					<%= render 'layouts/left_sidebar' %>
				</div>
					<% if is_controller?('pages') && is_action?('home') %>
					<% unless signed_in? %>
						<div class="grid_9 omega">
							<%= render 'layouts/call_to_action' %>
						</div>
					<% end %>
					<% end %>
				<div class="grid_6">
					<div class="middle_content">
						<% flash.each do |key, value| %>
							<div class="grid_6 alpha"><div class="flash <%= key %>"><%= value %></div></div>
						<% end %>
		
						<%= yield %>
					</div>
				</div>
				<div class="grid_3 omega">
					<%= render 'layouts/right_sidebar' %>
				</div>
			
				<% if is_controller?("pages") && is_action?('ranking') %>
					</div>
				<% end %>
			<% end %>
			

		</div>
		</div>
	</section>
		
		<%= render 'layouts/footer' %>
		
	</div>

<%= debug(params) if Rails.env.development? %>
</body>
</html>
