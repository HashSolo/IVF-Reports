<div class='user_profile'>
		
<div class="profile_top">
	<div class="gravatar-and-name">
		<%= gravatar_for @user %>
		<div class="user_info">
			<h1>Account Settings</h1>
			<span class="user_subtitle"><a href="http://gravatar.com/emails" target="_blank">Change Image</a></span>
		</div>
	</div>


	<div class="edit-profile-link">
	<% if current_user?(@user) %>
		<%= link_to current_user, :class => "view-button" do %><span class="icon">u</span>View Your Profile<% end %>
	<% end %>
	</div>
</div>	


<div class="user_info_section">
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
<table class="personal_info">
<tr>
	<td><%= f.label :name %></td>
	<td><%= f.text_field :name %></td>
</tr>
<tr>
	<td><%= f.label :email %></td>
	<td><%= f.text_field :email %></td>
</tr>
<tr>
	<td><%= f.label :password %></td>
	<td><%= f.password_field :password %></td>
</tr>
<tr>
	<td><%= f.label :password_confirmation, "Confirmation" %></td>
	<td><%= f.password_field :password_confirmation %></td>
</tr>
</table>
<div class="update_button">
	<%= f.submit "Update", :class => "styled-button green-gradient" %>
</div>
<% end %>
</div>



</div>